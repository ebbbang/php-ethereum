{
    "name": "ebbbang/php-ethereum",
    "description": "PHP library to interact with Ethereum Blockchain",
    "type": "library",
    "require": {
        "php": "^8.2",
        "kornrunner/ethereum-address": "^0.3.0"
    },
    "autoload": {
        "psr-4": {
            "Ebbbang\\PhpEthereum\\": "src/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
